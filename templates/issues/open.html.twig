{# @var closedIssues int #}
{% extends 'base.html.twig' %}

{% block title %} Open issues {% endblock %}

{% block bodyClasses %} page-issues {% endblock %}

{% block content %}
  <div class="container-fluid">
    <div class="row header-row">
      <div class="col-lg-12 header">
        <div class="logo"></div>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-3 col-lg-6 content">

        <div>{{ openIssues }} Open</div>
        <div>{{ closedIssues }} Closed</div>
        <div>Current page: {{ currentPage }}</div>
        <div>Last page: {{ lastPage }}</div>
        <br><br>
        {% include 'issues/pagination.html.twig' with {state: 'open'} %}

      </div>
    </div>
  </div>
{% endblock %}
